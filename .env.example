# Discord
DISCORD_TOKEN=YOUR_DISCORD_TOKEN

# PostgreSQL Database Configuration
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# Optional unified URL (overrides individual settings if set)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@127.0.0.1:5432/postgres

# Logging
# Общий уровень (DEBUG/INFO/WARN/ERROR/FATAL)
LOG_LEVEL=INFO
# Уровень для консоли (если пусто — берёт LOG_LEVEL)
LOG_CONSOLE_LEVEL=
# Уровень для файла (если пусто — берёт LOG_LEVEL)
LOG_FILE_LEVEL=
# Путь к лог-файлу ("none" или пусто — отключает файловый лог)
LOG_FILE=logs/app.log
# Сколько архивов хранить (ротация по полуночи, gzip)
LOG_BACKUP_COUNT=14
